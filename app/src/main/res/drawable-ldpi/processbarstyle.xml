<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <item android:id="@android:id/background">

        <shape>

            <corners android:radius="@dimen/d8" />

            <gradient
                android:angle="0"
                android:centerColor="@color/processbar_bgcolor"
                android:centerY="0.75"
                android:endColor="@color/processbar_bgcolor"
                android:startColor="@color/processbar_bgcolor" />
        </shape>
    </item>

    <item android:id="@android:id/secondaryProgress">

        <clip>

            <shape>

                <corners android:radius="@dimen/d8" />

                <gradient
                    android:angle="0"
                    android:centerColor="@color/processbar_bgcolor"
                    android:centerY="0.75"
                    android:endColor="@color/processbar_bgcolor"
                    android:startColor="@color/processbar_bgcolor" />
            </shape>
        </clip>
    </item>

    <item android:id="@android:id/progress">

        <clip>

            <shape>

                <corners android:radius="@dimen/d8" />

                <gradient
                    android:angle="0"
                    android:endColor="@color/colorPrimary"
                    android:startColor="@color/colorPrimary" />
            </shape>
        </clip>
    </item>

</layer-list>