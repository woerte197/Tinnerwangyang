<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >
    <!-- layout background -->
    <item>
        <!-- show rectangle area -->
        <shape android:shape="rectangle" >
            <gradient
                android:angle="270"
                android:startColor="@color/white"
                android:centerColor="@color/transport"
                android:endColor="@color/white"/>
        </shape>
    </item>
    <!-- layout foreground -->
    <item
        android:top="@dimen/titlebar_shadow_height"
        android:bottom="0px">
        <!-- show rectangle area -->
        <shape android:shape="rectangle" >
            <solid android:color="@color/white" />
        </shape>
    </item>
</layer-list>  