<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <solid android:color="#ccc" />
            <corners android:topLeftRadius="@dimen/d4" android:topRightRadius="@dimen/d4"
                android:bottomRightRadius="@dimen/d4" android:bottomLeftRadius="@dimen/d4" />
            <stroke android:width="@dimen/d03" android:color="#ccc" />
        </shape>
    </item>
    <item>
        <shape>
            <solid android:color="@color/white" />
            <corners android:topLeftRadius="@dimen/d4" android:topRightRadius="@dimen/d4"
                android:bottomRightRadius="@dimen/d4" android:bottomLeftRadius="@dimen/d4" />
            <stroke android:width="@dimen/d03" android:color="@color/white" />
        </shape>
    </item>
</selector>