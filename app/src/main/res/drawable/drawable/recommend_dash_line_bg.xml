<?xml version="1.0" encoding="utf-8"?>

<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <layer-list>
            <item>
                <shape>
                    <solid android:color="@color/white"/>
                    <stroke android:color="@color/color_1ba5e2"
                            android:dashGap="@dimen/d5"
                            android:dashWidth="@dimen/d5"
                            android:width="@dimen/d1"/>

                </shape>
            </item>
            <item android:left="@dimen/d1">
                <shape>
                    <solid android:color="@color/home_block_name_color"/>
                </shape>
            </item>
        </layer-list>
    </item>
    <item>
        <layer-list>
            <item>
                <shape>
                    <solid android:color="@color/white"/>
                    <stroke android:color="@color/color_1ba5e2"
                            android:dashGap="@dimen/d5"
                            android:dashWidth="@dimen/d5"
                            android:width="@dimen/d1"/>

                </shape>
            </item>
            <item android:left="@dimen/d1">
                <shape>
                    <solid android:color="@color/color_ffffff"/>
                </shape>
            </item>
        </layer-list>
    </item>


</selector>