<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@drawable/round_bg"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="@dimen/d5" >

        <com.lib.view.ClearableEditText
            android:id="@+id/etSearch"
            style="@style/style_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/d5"
            android:layout_weight="1"
            android:background="@null"
            android:hint="@string/msg_hint_input_serach"
            android:imeOptions="actionSearch"
            android:padding="@dimen/d0"
            android:textColorHint="@color/commem_serch_hint_color"
            android:textSize="14sp"/>
    </LinearLayout>

    <ImageButton
        android:id="@+id/imgSearch"
        style="@style/style_search"
        android:paddingBottom="@dimen/d0"
        android:paddingLeft="@dimen/d5"
        android:paddingRight="@dimen/d5"
        android:paddingTop="@dimen/d0"
        android:visibility="gone" />

    <Button
        android:id="@+id/btnSearch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/transport"
        android:minHeight="@dimen/d0"
        android:paddingBottom="@dimen/d0"
        android:paddingLeft="@dimen/d10"
        android:paddingTop="@dimen/d0"
        android:text="@string/msg_title_search"
        android:textColor="#a09a95"
        android:textSize="18sp"
        android:visibility="gone" />

</LinearLayout>